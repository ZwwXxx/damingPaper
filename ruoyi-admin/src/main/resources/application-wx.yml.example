# 微信公众号配置示例
# 使用前请将此文件重命名为 application-wx.yml 并填入真实配置

# 微信公众号配置
wx:
  mp:
    # 是否启用微信扫码登录功能
    # 如果还没配置好微信参数,请设置为false,避免启动报错
    enabled: true
    
    # 回调地址,需要是外网可访问的地址
    # 如果是本地开发,可以使用内网穿透工具(如ngrok、natapp等)
    # WebSocket和HTTP接口统一使用8080端口
    callback: http://your-domain.com
    
    # 公众号配置列表(支持多个公众号)
    configs:
      - appId: wxxxxxxxxxxxxxxxxxxx      # 微信公众号AppID
        secret: xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx  # 微信公众号AppSecret
        token: your_token_here          # 微信公众号Token(自定义)
        aesKey: your_aes_key_here       # 微信公众号EncodingAESKey(可选,消息加密时使用)

# 配置说明:
# 1. 在微信公众平台(https://mp.weixin.qq.com/)申请开发者资质
# 2. 获取AppID和AppSecret
# 3. 在"基本配置"中配置服务器地址(URL): http://your-domain.com/wx/portal/public
# 4. 配置Token(需与上面的token保持一致)
# 5. 点击"提交"时需要保证程序正在运行,微信会发送验证请求
