<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dm.quiz.mapper.DamingNoticeReadMapper">

    <resultMap id="DamingNoticeReadResult" type="com.dm.quiz.domain.DamingNoticeRead">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="noticeId" column="notice_id"/>
        <result property="readTime" column="read_time"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectDamingNoticeReadVo">
        select id, user_id, notice_id, read_time, create_time
        from daming_notice_read
    </sql>

    <!-- 查询单个阅读状态 -->
    <select id="selectDamingNoticeReadById" parameterType="java.lang.Long" resultMap="DamingNoticeReadResult">
        <include refid="selectDamingNoticeReadVo"/>
        where id = #{id}
    </select>

    <!-- 查询用户是否已读指定公告 -->
    <select id="selectDamingNoticeReadByUserAndNotice" resultMap="DamingNoticeReadResult">
        <include refid="selectDamingNoticeReadVo"/>
        where user_id = #{userId} and notice_id = #{noticeId}
        limit 1
    </select>

    <!-- 查询用户已读的公告ID列表 -->
    <select id="selectReadNoticeIdsByUserId" parameterType="java.lang.Long" resultType="java.lang.Long">
        select notice_id
        from daming_notice_read
        where user_id = #{userId}
    </select>

    <!-- 新增用户公告阅读状态 -->
    <insert id="insertDamingNoticeRead" parameterType="com.dm.quiz.domain.DamingNoticeRead" useGeneratedKeys="true" keyProperty="id">
        insert into daming_notice_read
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="noticeId != null">notice_id,</if>
            <if test="readTime != null">read_time,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="noticeId != null">#{noticeId},</if>
            <if test="readTime != null">#{readTime},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <!-- 批量新增用户公告阅读状态 -->
    <insert id="batchInsertDamingNoticeRead" parameterType="java.util.List">
        insert into daming_notice_read (user_id, notice_id, read_time, create_time)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.userId}, #{item.noticeId}, #{item.readTime}, #{item.createTime})
        </foreach>
    </insert>

    <!-- 删除用户公告阅读状态 -->
    <delete id="deleteDamingNoticeReadById" parameterType="java.lang.Long">
        delete from daming_notice_read where id = #{id}
    </delete>

    <!-- 删除用户的所有阅读记录 -->
    <delete id="deleteDamingNoticeReadByUserId" parameterType="java.lang.Long">
        delete from daming_notice_read where user_id = #{userId}
    </delete>

</mapper>








